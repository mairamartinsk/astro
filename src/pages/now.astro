---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { NOW } from "@consts";
import Link from "@components/Link.astro";
---

<Layout title={NOW.TITLE} description={NOW.DESCRIPTION}>
	<Container>
		<aside data-pagefind-ignore>
			<h1 class="font-semibold text-black dark:text-white">maira, now</h1>
			<div class="space-y-16">
				<section>
					<article class="space-y-4">
						<span>
							<p>
								What I'm currently doing, dreaming, eating, reading and other <em
									>'ings</em
								>. Inspired by <Link external href="https://nownownow.com/about"
									>nownownow</Link
								>.
							</p>
							<p class="italic">Last update on 2025-05-21.</p>
							<ul class="py-10">
								<li>
									📚 Reading <Link
										external
										href="https://www.goodreads.com/book/show/8310461-death-comes-as-the-end"
										>Death Comes as the End</Link
									> by Agatha Christie
								</li>
								<li>
									📺 Watching <Link
										external
										href="https://www.imdb.com/title/tt3032476/"
										>Better Call Saul</Link
									>
								</li>
								<li>
									🍝 Really excited about making fresh homemade pasta ever since
									buying a <Link
										external
										href="https://www.youtube.com/watch?v=TH1fFIYWFQw"
										aria-label="One-hour long veeery in-depth review of the Philips 7000 pasta maker"
										>pasta maker</Link
									> (way back in December, but the novelty has <b>not</b> worn off!)
								</li>
								<li>
									🏕️ Preparing for a trip to Andalucia in the coming weeks.
								</li>
								<li>💾 Just started working on this blog!</li>
							</ul>
						</span>
					</article>
				</section>
			</div>
		</aside>
	</Container>
</Layout>
